<GameBoard@GridLayout>:

<GameScreen@BoxLayout>:
    orientation: "vertical"

<GameButtons@FloatLayout>:
    size_hint: 1, 0.2
    Button:
        size_hint: 0.25, 0.25
        pos_hint: {"center_x": .25 , "y": 0.1}
        text: "Restart game"
        on_press: self.parent.reset_game()
    ToggleButton:
        size_hint: 0.25, 0.25
        pos_hint: {"center_x": 0.75 , "y": 0.1}
        text: "First move"
        state: "down"
    Label:
        background_color: [0,0,0,0]
        size_hint: 0.1, 0.1
        pos_hint: {"center_x": 0.5, "y": 0.5}
        text: "Click to start..."

    